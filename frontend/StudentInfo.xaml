<Window x:Class="frontend.StudentInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frontend"
        mc:Ignorable="d"
        Title="StudentInfo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="227*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Label Name="labelUsername" Content="Label" FontSize="20"  Grid.Column="1"/>
        <Button Name="btnMyData" Content="My Data" Click="btnMyData_Click" Grid.Column="1" Grid.Row="1"/>
        <StackPanel Grid.Column="1" Grid.Row="3">
            <TextBlock Name="tbUsername" FontSize="20"/>
            <TextBlock Name="tbFname" FontSize="20"/>
            <TextBlock Name="tbLname" FontSize="20"/>
            <TextBlock Name="tbAddress" FontSize="20"/>
        </StackPanel>

    </Grid>
</Window>
